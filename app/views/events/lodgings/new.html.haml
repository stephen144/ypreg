%section.content
  .row
    .col-xs-12
      .box
        .box-header.with-border
          %h1.box-title Add Lodgings
        .box-body
          = form_tag add_event_lodgings_path, method: :post do
            %table.table.table-striped
              %thead
                %tr
                  %td
                  %td Name
                  %td Type
                  %td Min Capacity
                  %td Max Capacity
              %tbody
                - event.other_lodgings.each do |lodging|
                  %tr
                    %td= check_box_tag "lodging_ids[]", lodging.object.id
                    %td= lodging.name
                    %td= lodging.lodging_type
                    %td= lodging.min_capacity
                    %td= lodging.max_capacity
            - if event.other_lodgings.any?
              = submit_tag 'Add', class: 'btn btn-primary btn-sm'
